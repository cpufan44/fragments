<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:orientation="vertical"
    tools:context=".HomeActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@color/colorPrimaryDark">

        <fragment
            android:id="@+id/gpa_fragment"
            android:name="ge.tsu.lecture5.fragments.GPAFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"></fragment>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="setGPA"
            android:text="Set GPA to 500">

        </Button>

        <Button
            android:onClick="chooseSubject"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Choose Subject"></Button>
        <Button
            android:onClick="goToCal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Go to calendar"></Button>

    </LinearLayout>

</LinearLayout>